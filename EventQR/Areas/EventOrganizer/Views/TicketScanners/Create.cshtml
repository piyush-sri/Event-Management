@model EventQR.Models.TicketScanner

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_OrganizerLayout.cshtml";
    ViewBag.activeTabName = "thisEventScanner";

}

<div class="content">
    <div class="card">
        <div class="card-body">
            <h4>TicketScanner</h4>
           
            <form asp-action="Create">
                <input asp-for="UserLoginId" class="form-control" type="hidden" />
                <input asp-for="EventId" class="form-control" type="hidden" />
       
                <div class="col-md-12">
                <div asp-validation-summary="All" class="text-danger"></div>
             
                </div>
                <div class="row">
                    <div class="form-group col-md-4">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                   
                    <div class="form-group col-md-4">
                        <label asp-for="Mobile1" class="control-label"></label>
                        <input asp-for="Mobile1" class="form-control" />
                        <span asp-validation-for="Mobile1" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Mobile2" class="control-label"></label>
                        <input asp-for="Mobile2" class="form-control" />
                        <span asp-validation-for="Mobile2" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="EmailId" class="control-label"></label>
                        <input asp-for="EmailId" type="email" class="form-control" />
                        <span asp-validation-for="EmailId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                   
                </div>
                <div class="text-center">
                    <div class="form-group col-md-12">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </form>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>

