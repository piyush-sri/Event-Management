@model EventQR.Models.SubEvent

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_OrganizerLayout.cshtml";

    ViewBag.activeTabName = "thisEventSubEvents";

}@await Html.PartialAsync("_eventPartial")
<div class="row">
   
    <div class="col-sm-12">
        <div class="content">
            <div class="card">
                <div class="card-header">
                    <h4 style="text-align:center"><b>Sub Event Details</b></h4>
                    <hr />
                        <dl class="row">
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Event)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Event.UniqueId)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.SubEventName)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.SubEventName)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.StartDateTime)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.StartDateTime)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.EndDateTime)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.EndDateTime)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CreatedDate)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.CreatedDate)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.LastUpdatedDate)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.LastUpdatedDate)
                            </dd>
                        </dl>
                        <div>
                            <a asp-action="Create" asp-route-id="@Model?.UniqueId">Edit</a> |
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
  
</div>
   